{
  "name": "my-landing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "2.2.6",
    "d3": "^5.7.0",
    "dotenv": "^8.0.0",
    "firebase": "^6.3.4",
    "get-browser-language": "^1.0.0",
    "lodash.isequal": "^4.5.0",
    "node-sass": "^4.10.0",
    "query-string": "^6.2.0",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "^3.0.1",
    "react-simple-image": "^1.0.0",
    "react-sprite-animator": "^1.2.0",
    "react-swipeable-views": "^0.13.0",
    "react-switch": "^5.0.1",
    "react-youtube": "^7.9.0",
    "screenfull": "^4.2.1",
    "suncalc": "^1.8.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "minify-public-css": "html-minifier --input-dir ./public/noscriptstyles --output-dir ./build/noscriptstyles --config-file ./minifier.json",
    "minify-public-html": "html-minifier --input-dir ./public/cv --output-dir ./build --config-file ./minifier.json",
    "postbuild": "npm run minify-public-css && npm run minify-public-html",
    "build": "react-scripts build && npm run postbuild",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "deploy": "yarn build && firebase deploy",
    "responsive-images": "node ./utils/task.js",
    "precommit": "lint-staged",
    "prettify": "eslint './src/**/*.{js,json,jsx,ts,tsx}' --fix && prettier --write './src/**/*.{js,json,jsx,ts,tsx,css,scss}'"
  },
  "engines": {
    "node": ">=9.0.0"
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.12.4",
    "html-minifier": "^4.0.0",
    "husky": "3.0.3",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2"
  },
  "optionalPeerDependencies": {
    "responsive-images-generator": "^0.2.2",
    "webp-converter": "^2.2.2"
  },
  "lint-staged": {
    "src/**/*.{js,json,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{js,json,jsx,ts,tsx,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "development": [
      "last 4 versions"
    ],
    "production": [
      "last 4 versions",
      "not dead"
    ]
  }
}
